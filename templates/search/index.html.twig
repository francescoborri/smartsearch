{% extends 'base.html.twig' %}

{% block title %}
	Smart search
{% endblock %}

{% block body %}
	<div class="row row-cols-1 g-lg-5 g-3">
		<div class="col">
			<div class="card shadow justify-content-center">
				<div class="card-body">
					<div class="input-group">
						<div class="input-group-text">
							<i class="bi bi-search"></i>
						</div>
						<input type="text" id="search-field" name="search-field" class="form-control" placeholder="Type a city name" autocomplete="off">
					</div>
				</div>
				<ul class="dropdown-menu w-100 my-lg-3 my-2 shadow" id="search-dropdown"></ul>
			</div>
		</div>
	</div>
	<div id="modal-city" class="modal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header align-items-center justify-content-start">
					<h3 id="modal-city-name" class="mb-0"></h3>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body align-middle">
					<span id="modal-city-country"></span>,
					<span id="modal-city-subcountry"></span>
					<br>
					<code id="modal-city-geonameid" class="font-monospace"></code>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/search.js') }}"></script>
{% endblock %}
